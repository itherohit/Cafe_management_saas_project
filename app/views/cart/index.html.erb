<main class="cart-section">
  <section class="nav-bar-section">
    <nav class="navbar navbar-dark nav-color navbar-expand-lg fixed-top">
      <a class="navbar-brand animated tada delay-5s" href=""><i class="fas fa-utensils nav-icon"></i> <span class="logo-foody">Foody</span> <span class="Blinders-logo">Blinders</span></a>
      <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon nav-button"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>        
          <li class="nav-item">
            <a class="nav-link" href="/menus">Menu</a>
          </li>
          <% if !@current_user %>
            <li class="nav-item">
              <a class="nav-link" id="sign-in-link" href="#">Sign In</a>
            </li>
          <% end %>
          <% if @current_user %>
            <% if @current_user.role == "customer" %>
              <li class="nav-item">
                <a class="nav-link" href="/orders">Orders</a>
              </li>
            <% elsif @current_user.role == "clerk" %>
              <li class="nav-item">
                <a class="nav-link" href="/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/orders">Orders</a>
              </li>  
            <% end %>
            <% if @current_user.role == "owner" %>
              <li class="nav-item">
                <a class="nav-link" href="/owner">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/dashboard">Orders</a>
              </li>  
            <% end %>
            
            <li class="nav-item">
              <div class="cart-div">
                <a class="nav-link active" href="/cart"><i class="fas fa-shopping-cart"></i></a>
              </div>
            </li>
            <li class="nav-item">
              <%= link_to "Sign Out", destroy_session_path, class:"nav-link", id: "sign-out"%>
            </li>            
          <% end %>
        </ul>
      </div>
    </nav>
  </section>
  <section>
    <div class="cart-box">
      <div class="cart-box-header">
        <h4 class="cart-item">Item</h4>
        <h4 class="cart-price">Price</h4>
        <h4 class="cart-quantity">Quantity </h4>
        <h4 class="cart-total">Total</h4>
      </div>
      <div class="cart-box-items">
        <div class="cart-empty">
          <p  class="cart-box-empty">Your cart is empty. Are you not Hungry?</p>
          <a class="cart-box-empty-link" href="/menus">See Menu</a>
        </div>
      </div>
      <% if @current_user.role != "customer" %>
        <div class="customer-name invisible">
          <input class="customer-name-input" id="customerName" type="text" placeholder="Customer Name" required/>
        </div>
      <% end %>
    </div>
  </section>
</main>