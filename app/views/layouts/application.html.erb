<!DOCTYPE html>
<html>
  <head>
    <title>Foody Blinders</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Montserrat|Roboto|Caveat&display=swap" rel="stylesheet">
    <!-- Boot Strap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <!-- Font Awesome -->
    <%= stylesheet_link_tag "reset" %>
    <%= stylesheet_link_tag "sign" %>
    <%= stylesheet_link_tag "animate" %>
    <%= stylesheet_link_tag "home" %>
    <%= stylesheet_link_tag "menu" %>
    <%= stylesheet_link_tag "cart" %>
    <%= stylesheet_link_tag "cDashboard" %>
    <%= stylesheet_link_tag "sample" %> 
    <%= stylesheet_link_tag "invoice" %> 
    <script src="https://kit.fontawesome.com/15f26acd7c.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    </head>

  <body> 
    <div class="loader" id="loader">
      <img src="https://i.pinimg.com/originals/ee/1d/08/ee1d081c5bdf966b058c1a6588e73e8a.gif">
      <h2 class="loader-text">Loading ...<h2>
    </div>
    <% if flash[:error] || flash[:session] %>
      <div class="falsh-message ">
      <button class="flash-closeBtn "><i class="far fa-times-circle"></i></button>
        <div class="flash-message-para justify-content-center">
          <% if flash[:error] %>
            <div class="flash-content">
              <p><%= flash[:error] %></p>
            </div>
            </div>
          <% end %>
          <% if flash[:session] %>
          <div class="flash-content">
          <p ><%= flash[:session] %></p>
          </div>
          <% end %>
        </div>
      </div>
    <% end %>
    <%= yield %>
    <%= javascript_pack_tag 'home', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'menu', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'cDashboard', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
